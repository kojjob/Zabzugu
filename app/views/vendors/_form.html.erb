<%= form_with(model: vendor, class: "contents") do |form| %>
  <% if vendor.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(vendor.errors.count, "error") %> prohibited this vendor from being saved:</h2>

      <ul class="list-disc ml-6">
        <% vendor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": vendor.errors[:user_id].none?, "border-red-400 focus:outline-red-600": vendor.errors[:user_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :business_name %>
    <%= form.text_field :business_name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": vendor.errors[:business_name].none?, "border-red-400 focus:outline-red-600": vendor.errors[:business_name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": vendor.errors[:description].none?, "border-red-400 focus:outline-red-600": vendor.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": vendor.errors[:phone_number].none?, "border-red-400 focus:outline-red-600": vendor.errors[:phone_number].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :tax_id %>
    <%= form.text_field :tax_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": vendor.errors[:tax_id].none?, "border-red-400 focus:outline-red-600": vendor.errors[:tax_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.number_field :status, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": vendor.errors[:status].none?, "border-red-400 focus:outline-red-600": vendor.errors[:status].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :commission_rate %>
    <%= form.text_field :commission_rate, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": vendor.errors[:commission_rate].none?, "border-red-400 focus:outline-red-600": vendor.errors[:commission_rate].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
