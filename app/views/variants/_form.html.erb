<%= form_with(model: variant, class: "contents") do |form| %>
  <% if variant.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(variant.errors.count, "error") %> prohibited this variant from being saved:</h2>

      <ul class="list-disc ml-6">
        <% variant.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": variant.errors[:name].none?, "border-red-400 focus:outline-red-600": variant.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :price %>
    <%= form.text_field :price, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": variant.errors[:price].none?, "border-red-400 focus:outline-red-600": variant.errors[:price].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :stock_quantity %>
    <%= form.number_field :stock_quantity, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": variant.errors[:stock_quantity].none?, "border-red-400 focus:outline-red-600": variant.errors[:stock_quantity].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :sku %>
    <%= form.text_field :sku, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": variant.errors[:sku].none?, "border-red-400 focus:outline-red-600": variant.errors[:sku].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :product_id %>
    <%= form.text_field :product_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": variant.errors[:product_id].none?, "border-red-400 focus:outline-red-600": variant.errors[:product_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
