<div id="<%= dom_id variant %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= variant.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Price:</strong>
    <%= variant.price %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Stock quantity:</strong>
    <%= variant.stock_quantity %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Sku:</strong>
    <%= variant.sku %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Product:</strong>
    <%= variant.product_id %>
  </div>
</div>
